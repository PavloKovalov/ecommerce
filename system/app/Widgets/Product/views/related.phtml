<ul class="related-products">
    <?php foreach ($this->related as $product) : ?>
    <li>
        <?php if ($this->withImg) : ?>
        <?php $photo = $this->websiteUrl.$product->getPhoto(); ?>
        <img src="<?php echo $photo; ?>" alt="<?php echo $product->getName(); ?>" title="<?php echo $product->getName(); ?>" />
        <?php endif; ?>
        <a href="<?php echo $this->websiteUrl . ($product->getPage() !== null ? $product->getPage()->getUrl(): '' );?>"><?php echo $product->getName(); ?></a>
    </li>
    <?php endforeach ; ?>
</ul>